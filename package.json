{
	"name": "lint-wiki-dumps",
	"version": "0.8.0",
	"description": "Lint Wikipedia dumps",
	"keywords": [
		"lint",
		"wikipedia"
	],
	"homepage": "https://github.com/bhsd-harry/lint-wiki-dumps#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/lint-wiki-dumps/issues"
	},
	"license": "GPL-3.0",
	"author": "Bhsd",
	"files": [
		"*.sh",
		"!bump.sh",
		"*.js",
		"!server.js",
		"config/",
		"reports/*.html",
		"reports/dist/",
		"reports/*.css"
	],
	"bin": {
		"lint-wiki-dumps": "scan.sh"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/lint-wiki-dumps.git"
	},
	"scripts": {
		"start": "node server.js",
		"prepublishOnly": "npm run build",
		"bundle": "esbuild reports/src/*.ts --charset=utf8 --bundle --format=esm --outdir=build && rm build/common.js",
		"build": "tsc && mv dist/* . && npm run bundle && esbuild build/*.js --charset=utf8 --minify --target=es2019 --format=iife --sourcemap --outdir=reports/dist",
		"lint:ts": "tsc --noEmit && tsc --project reports/tsconfig.json --noEmit && eslint --cache . && eslint --no-config-lookup -c eslint.reports.mjs reports/",
		"lint:css": "stylelint **/*.css",
		"lint:md": "markdownlint-cli2 '**/*.md'",
		"lint": "npm run lint:ts && npm run lint:css && npm run lint:md",
		"toolforge": "bash scan-toolforge.sh"
	},
	"dependencies": {
		"@bhsd/nodejs": "^0.1.0",
		"chalk": "^4.1.2",
		"unbzip2-stream": "^1.4.3",
		"wikilint": "^2.31.0",
		"xml-stream": "^0.4.5"
	},
	"optionalDependencies": {
		"vscode-css-languageservice": "^6.3.8"
	},
	"devDependencies": {
		"@bhsd/code-standard": "^1.3.2",
		"@stylistic/eslint-plugin": "^5.5.0",
		"@stylistic/stylelint-plugin": "^4.0.0",
		"@types/node": "^24.10.1",
		"@types/unbzip2-stream": "^1.4.3",
		"@typescript-eslint/eslint-plugin": "^8.46.4",
		"@typescript-eslint/parser": "^8.46.4",
		"esbuild": "^0.25.12",
		"eslint": "^9.39.1",
		"eslint-plugin-es-x": "^9.1.2",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^61.2.1",
		"eslint-plugin-jsonc": "^2.21.0",
		"eslint-plugin-n": "^17.23.1",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^2.10.0",
		"eslint-plugin-unicorn": "^62.0.0",
		"markdownlint-cli2": "^0.19.0",
		"stylelint": "^16.26.1",
		"stylelint-config-recommended": "^17.0.0",
		"stylelint-plugin-use-baseline": "^1.1.0",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": ">=20.19.2 <23"
	}
}
