{
	"name": "lint-wiki-dumps",
	"version": "0.7.0",
	"description": "Lint Wikipedia dumps",
	"keywords": [
		"lint",
		"wikipedia"
	],
	"homepage": "https://github.com/bhsd-harry/lint-wiki-dumps#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/lint-wiki-dumps/issues"
	},
	"license": "GPL-3.0",
	"author": "Bhsd",
	"files": [
		"*.sh",
		"!bump.sh",
		"*.js",
		"!server.js",
		"config/",
		"reports/*.html",
		"reports/dist/",
		"reports/*.css"
	],
	"bin": {
		"lint-wiki-dumps": "scan.sh"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/lint-wiki-dumps.git"
	},
	"scripts": {
		"start": "node server.js",
		"prepublishOnly": "npm run build",
		"bundle": "esbuild reports/src/*.ts --charset=utf8 --bundle --format=esm --outdir=build && rm build/common.js",
		"build": "tsc && mv dist/* . && npm run bundle && esbuild build/*.js --charset=utf8 --minify --target=es2019 --format=iife --sourcemap --outdir=reports/dist",
		"lint:ts": "tsc --noEmit && tsc --project reports/tsconfig.json --noEmit && eslint --cache .",
		"lint:css": "stylelint **/*.css",
		"lint": "npm run lint:ts && npm run lint:css"
	},
	"dependencies": {
		"@bhsd/nodejs": "^0.0.1",
		"chalk": "^4.1.2",
		"unbzip2-stream": "^1.4.3",
		"wikilint": "^2.29.1",
		"xml-stream": "^0.4.5"
	},
	"optionalDependencies": {
		"vscode-css-languageservice": "^6.3.7"
	},
	"devDependencies": {
		"@bhsd/code-standard": "^1.2.0",
		"@stylistic/eslint-plugin": "^3.1.0",
		"@stylistic/stylelint-plugin": "^4.0.0",
		"@types/node": "^24.0.10",
		"@types/unbzip2-stream": "^1.4.3",
		"@typescript-eslint/eslint-plugin": "^8.35.1",
		"@typescript-eslint/parser": "^8.35.1",
		"esbuild": "^0.25.10",
		"eslint": "^8.57.1",
		"eslint-plugin-es-x": "^8.7.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^54.1.1",
		"eslint-plugin-json-es": "^1.6.0",
		"eslint-plugin-n": "^17.20.0",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^2.9.0",
		"eslint-plugin-unicorn": "^56.0.1",
		"stylelint": "^16.25.0",
		"stylelint-config-recommended": "^17.0.0",
		"stylelint-plugin-use-baseline": "^1.0.0",
		"typescript": "^5.8.2"
	},
	"engines": {
		"node": ">=20.19.2 <23"
	}
}
